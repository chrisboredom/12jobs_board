<%= form_for @job do |f| %>
  <div class="field">
    <%= f.label :"Job Title" %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :"Job Description" %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :"Company Name" %><br>
    <%= f.text_field :company %>
  </div>
  <div class="field">
    <%= f.label :"Link to Job" %><br>
    <%= f.text_field :url %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
  