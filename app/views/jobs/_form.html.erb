<%= form_for @job do |f| %>
  <div class="field">
    <%= f.collection_select :category_id, Category.all, :id, :name, {promt: "Choose a category" }, input_html: { class: "dropdown-toggle" } %><br>
  </div>
  <div class="field">
    <%= f.label :"Job Title", input_html: { class: "form-control" } %><br>
    <%= f.text_field :title, input_html: { class: "form-control" } %>
  </div>
  <div class="field">
    <%= f.label :"Job Description",input_html: { class: "form-control" } %><br>
    <%= f.text_area :description, input_html: { class: "form-control" } %>
  </div>
  <div class="field">
    <%= f.label :"Company Name", input_html: { class: "form-control" } %><br>
    <%= f.text_field :company,input_html: { class: "form-control" } %>
  </div>
  <div class="field">
    <%= f.label :"Link to Job", input_html: { class: "form-control" } %><br>
    <%= f.text_field :url, input_html: { class: "form-control" } %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
  